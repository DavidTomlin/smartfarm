<tr class="soil-sample">
  <td>A</th>
  <td>
    <input type="number" step="any" class="latitude">
  </td>
  <td>
    <input type="number" step="any" class="longitude">
  </td>
  <td>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#soil_properties_A">Soil Properties</button>
    <div id="soil_properties_A" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Soil Properties for Sample A</h4>
          </div>
          <div class="modal-body">
            <p>Enter the values for your soil sample below</p>
          <% for property in Soil::PROPERTIES %>
            <div class="form-group">
              <label class="control-label"><%= property.gsub('_', ' ') %></label>
              <input class="form-control" step="any" type="number" name="<%= property %>" class="<%= property %>">
            </div>
          <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </td>
  <td>
    <button type="button" class="btn btn-danger remove">&times; Remove</button>
  </td>
</tr>

