<h1>New Simulation</h1>
<%= form_for(@simulation) do |f| %>

  <button type="submit" role="button" class="pull-right btn-success"><i class="fa fa-floppy-o"></i></button>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#details" data-toggle="tab">Details</a></li>
    <li><a href="#farm" data-toggle="tab">Farm</a></li>
    <li><a href="#weather" data-toggle="tab">Weather</a></li>
  </ul>


  <div class="tab-content">

    <div class="tab-pane active" id="details">
      <div class="form_group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form_group">
        <%= f.label :start_on %>
        <%= f.date_field :start_on, class: "form-control" %>
      </div>

      <div class="form_group">
        <%= f.label :end_on %>
        <%= f.date_field :end_on, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="tab-pane" id="farm">
      <%= render "farm" %>
    </div>

    <div class="tab-pane" id="weather">
    </div>

  </div>

  <%= f.hidden_field :state %>

<% end %>

      
<%= link_to 'Back', simulations_path %>
