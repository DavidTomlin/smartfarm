<%= div_for crop, class: "thumbnail", data: {id: crop.id} do %>
  <%= link_to crop do %>
    <img src="data:image/svg+xml;base64," alt="...">
    <strong><%= crop.name %></strong>
  <% end %>
  <%= link_to('&times; Remove'.html_safe, crop, method: :delete, remote: true, confirm: "Are you sure you want to delete #{crop.name}?", class: "btn btn-danger btn-sm pull-right") if can? :delete, crop %>
  <p>by <%= link_to crop.user.username, crop.user %></p>
<% end %>
