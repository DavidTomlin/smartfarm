<div class="well">
  <div class="btn-groupy">
    <button id="run" role="button" class="btn btn-success">
      <i class="fa fa-play-circle-o"></i>
      Run Crop Simulation
    </button>
    <button id="save" role="button" class="btn btn-info">
      <i class="fa fa-floppy-o"></i>
      Save Crop
    </button>
    <span id='message' class="alert"></span>
  </div>
<br>
  <div id="crop-editor" data-crop-id="<%= @crop.id %>" style="height: 80%; width: 100%;"></div>
  <xml id="toolbox" style="display: none">
    <category name="stuff">
      <block type="controls_if"></block>
      <block type="controls_repeat_ext"></block>
      <block type="logic_compare"></block>
      <block type="math_number"></block>
      <block type="math_arithmetic"></block>
      <block type="text"></block>
      <block type="text_print"></block>
<block type="variables_set"><field name="VAR">heat units</field></block>
    </category>      
    <category name="entry points">
      <block type="procedures_defnoreturn">
        <field name="NAME">before water and nutrient allocation</field>
      </block>
      <block type="procedures_defnoreturn">
        <field name="NAME">between water and nutrient allocation</field>
      </block>
      <block type="procedures_defnoreturn">
        <field name="NAME">after water and nutrient allocation</field>
      </block>
    </category>
    <category name="functions" custom="PROCEDURE"></category>
    <category name="variables" custom="VARIABLE">
    </category>
  </xml>
  <%= @crop.workspace.html_safe %>
